<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_gravity="right"
    android:gravity="right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="RtlHardcoded">

    <FrameLayout
        android:layout_gravity="center_vertical|left"
        android:background="@mipmap/my_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/txt_my_layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_my_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:textAlignment="gravity"
                android:textSize="@dimen/contentSize" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/img_my_layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </FrameLayout>
    </FrameLayout>

    <com.github.snowdream.android.widget.SmartImageView
        android:id="@+id/txt_my_headpic"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/headpic"
        android:background="@android:color/white"
        android:layout_width="@dimen/small_pic"
        android:layout_height="@dimen/small_pic" />
</LinearLayout>